<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/pos"
                android:textColor="#030303"
                android:textSize="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="号桌"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="7"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="菜品"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="单价"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="数量"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="小计"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ListView
                    android:id="@+id/listview_order_detail"
                    android:layout_width="180dp"
                    android:layout_height="300dp" >
                </ListView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/food_amount"
                        android:layout_marginLeft="30dp"
                        android:textSize="20dp"
                        android:textColor="#030303" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/food_amount2"
                        android:textSize="20dp"
                        android:textColor="#030303"
                        android:layout_marginLeft="30dp"
                        android:singleLine="false"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/food_amount3"
                        android:textColor="#030303"
                        android:textSize="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/food_amount4"
                        android:textColor="#030303"
                        android:textSize="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/food_amount5"
                        android:textColor="#030303"
                        android:textSize="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/totalamount1"
                        android:textSize="20dp"
                        android:textColor="#030303"
                        android:layout_marginLeft="33dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/totalamount2"
                        android:textSize="20dp"
                        android:textColor="#030303"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/totalamount3"
                        android:textSize="20dp"
                        android:textColor="#030303"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/totalamount4"
                        android:textSize="20dp"
                        android:textColor="#030303"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="33dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/totalamount5"
                        android:textSize="20dp"
                        android:textColor="#030303"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计到达时间："
                    android:id="@+id/textView33"
                    android:textSize="25dp"
                    android:textColor="#030303" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:textColor="#030303"
                    android:text="00:00"
                    android:textIsSelectable="false"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#9fe6eb">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计:￥"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="italic"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/txt_orderdetail_total"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="35dp" />

        <ImageView
            android:id="@+id/img_oder_submit"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:background="@drawable/submit_background" />

    </LinearLayout>

</LinearLayout>