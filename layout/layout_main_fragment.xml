<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <include 
        layout="@layout/block_header"/>
    <LinearLayout 
        android:id="@+id/linear_01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ViewFlipper 
            android:id="@+id/vf_today"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">
        </ViewFlipper>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="今日特价菜品："
            android:id="@+id/textView4"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textColor="#030303" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="水煮鱼  原价：32  现价：15"
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textColor="#030303" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView6"
            android:textSize="25dp"
            android:text="辣子鸡  原价：26  现价：20 "
            android:textStyle="italic"
            android:textColor="#030303" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/textView8"
            android:textSize="25dp"
            android:text="酸菜鱼  原价：23  现价：16"
            android:textStyle="italic"
            android:textColor="#030303" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="毛血旺  原价：32  现价：17"
            android:id="@+id/textView9"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textColor="#030303" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="240dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView7"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/holo_blue_bright"
                android:text="@string/begin" />

            <ImageView
                android:id="@+id/btn_ordering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ordering_unselected"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
